<Window x:Class="piMovie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:piMovie"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="tbPathname" HorizontalAlignment="Left" Height="23" Margin="150,22,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="257"/>
        <Label Content="Please paste folder path:" HorizontalAlignment="Left" Margin="10,18,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnGo" Content="Go!" HorizontalAlignment="Left" Margin="426,22,0,0" VerticalAlignment="Top" Width="75" Click="btnGo_Click"/>
        <StatusBar HorizontalAlignment="Left" Height="21" Margin="0,302,0,-0.2" VerticalAlignment="Top" Width="520"/>
        <TextBlock x:Name="tBlockLog" HorizontalAlignment="Left" Margin="10,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="214" Width="491"/>

    </Grid>
</Window>
